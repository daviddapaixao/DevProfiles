<?xml version="1.0" encoding="utf-8"?>
 <android.support.constraint.ConstraintLayout
	 xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:tools="http://schemas.android.com/tools"
	 xmlns:app="http://schemas.android.com/apk/res-auto"
	 android:layout_width="match_parent"
	 android:layout_height="match_parent"
	 tools:context=".MainActivity">
	 <ImageView
		 android:layout_width="0dp"
		 android:layout_height="150dp"
		 app:srcCompat="@drawable/devslopesbanner"
		 android:id="@+id/topBannerImageView"
		 app:layout_constraintTop_toTopOf="parent"
		 app:layout_constraintStart_toStartOf="parent"
		 app:layout_constraintEnd_toEndOf="parent"
		 android:adjustViewBounds="false"
		 android:scaleType="centerCrop"/>
	 <ImageView
		 android:layout_width="wrap_content"
		 android:layout_height="wrap_content"
		 app:srcCompat="@drawable/devslopesprofilelogo"
		 android:id="@+id/logoImageView"
		 app:layout_constraintStart_toStartOf="parent"
		 app:layout_constraintTop_toTopOf="parent"
		 android:layout_marginTop="120dp"
		 android:layout_marginLeft="16dp"
		 android:layout_marginStart="16dp"/>
	 <TextView
		 android:text="TextView"
		 android:layout_width="wrap_content"
		 android:layout_height="wrap_content"
		 android:id="@+id/logotextView"
		 app:layout_constraintStart_toEndOf="@+id/logoImageView"
		 app:layout_constraintTop_toBottomOf="@id/topBannerImageView"
		 android:layout_marginTop="24dp"
		 android:layout_marginLeft="24dp"
		 android:layout_marginStart="24dp"
		 app:fontFamily="@font/roboto" android:textSize="16dp"/>
	<ImageView
			android:layout_width="50dp"
			android:layout_height="50dp" app:srcCompat="@drawable/camerabutton"
			android:id="@+id/cameraImageView"
			app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintEnd_toStartOf="@+id/favoriteImageView"
			app:layout_constraintTop_toBottomOf="@+id/logoImageView"
			android:layout_marginTop="32dp" app:layout_constraintHorizontal_chainStyle="packed"/>
	<ImageView
		android:layout_width="50dp"
		android:layout_height="50dp" app:srcCompat="@drawable/favoritebutton"
		android:id="@+id/favoriteImageView"
		app:layout_constraintStart_toEndOf="@+id/cameraImageView" app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintEnd_toStartOf="@+id/inboxImageView"
		app:layout_constraintTop_toTopOf="@+id/cameraImageView"
		app:layout_constraintBottom_toBottomOf="@+id/cameraImageView" app:layout_constraintVertical_bias="0.0"
		android:layout_marginRight="35dp" android:layout_marginLeft="35dp"/>
	<ImageView
		android:layout_width="50dp"
		android:layout_height="50dp" app:srcCompat="@drawable/inboxbutton"
		android:id="@+id/inboxImageView"
		app:layout_constraintStart_toEndOf="@+id/favoriteImageView" app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/favoriteImageView"
		app:layout_constraintBottom_toBottomOf="@+id/favoriteImageView" app:layout_constraintVertical_bias="1.0"/>
	<android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
										  android:id="@+id/guideline2"
										  android:orientation="vertical"
										  app:layout_constraintGuide_percent="0.5"/>
	<ImageView
			android:layout_width="0dp"
			android:layout_height="0dp" app:srcCompat="@drawable/dataimage"
			android:id="@+id/imageView7" android:scaleType="centerCrop"
			android:adjustViewBounds="false" android:cropToPadding="false"
			app:layout_constraintTop_toBottomOf="@+id/cameraImageView"
			android:layout_marginTop="32dp" app:layout_constraintEnd_toStartOf="@+id/guideline2"
			android:layout_marginRight="4dp" android:layout_marginEnd="4dp" app:layout_constraintDimensionRatio="1:1"
	/>
	<ImageView
			android:layout_width="0dp"
			android:layout_height="0dp" app:srcCompat="@drawable/codeimage"
			android:id="@+id/imageView8" android:scaleType="centerCrop"
			app:layout_constraintTop_toBottomOf="@+id/imageView9" app:layout_constraintStart_toStartOf="@+id/guideline2"
			android:layout_marginTop="8dp" android:layout_marginLeft="4dp" android:layout_marginStart="4dp"
			app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
			app:layout_constraintEnd_toEndOf="@+id/imageView9" app:layout_constraintDimensionRatio="1:1"/>
	<ImageView
			android:layout_width="0dp"
			android:layout_height="0dp" app:srcCompat="@drawable/imagesimage"
			android:id="@+id/imageView9" android:scaleType="centerCrop"
			app:layout_constraintTop_toTopOf="@+id/imageView7" app:layout_constraintStart_toStartOf="@+id/guideline2"
			android:layout_marginLeft="4dp" android:layout_marginStart="4dp" app:layout_constraintDimensionRatio="1:1"/>
	<ImageView
			android:layout_width="0dp"
			android:layout_height="0dp" app:srcCompat="@drawable/videosimage"
			android:id="@+id/imageView10" android:scaleType="centerCrop"
			app:layout_constraintTop_toBottomOf="@+id/imageView7"
			android:layout_marginTop="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline2"
			android:layout_marginRight="4dp" android:layout_marginEnd="4dp"
			app:layout_constraintStart_toStartOf="@+id/imageView7" app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="16dp" app:layout_constraintDimensionRatio="1:1"/>
</android.support.constraint.ConstraintLayout>
